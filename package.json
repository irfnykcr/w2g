{
	"name": "w2g",
	"version": "0.2.11",
	"description": "",
	"license": "ISC",
	"author": "",
	"type": "commonjs",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"devDependencies": {
		"electron": "^36.3.2",
		"electron-builder": "^26.0.12"
	},
	"dependencies": {
		"@distube/ytdl-core": "^4.16.12",
		"axios": "^1.9.0",
		"bcryptjs": "^3.0.2",
		"electron-updater": "^6.6.2",
		"ws": "^8.18.3",
		"youtube-dl-exec": "^3.0.24"
	},
	"build": {
		"appId": "com.turkuazz.w2g",
		"productName": "TURKUAZZ",
		"artifactName": "${productName}-${version}.${ext}",
		"asar": true,
		"asarUnpack": [
			"node_modules/youtube-dl-exec/bin/**/*"
		],
		"publish": {
			"provider": "generic",
			"url": "https://w2g.turkuazz.vip/updates/"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Utility",
			"files": [
				"main.js",
				"preload.js",
				"secureStorage.js",
				"updateManager.js",
				"package.json",
				"views/**/*",
				"assets/**/*",
				"node_modules/**/*",
				"node_modules/youtube-dl-exec/bin/yt-dlp",
				"!node_modules/youtube-dl-exec/bin/yt-dlp.exe",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_macos",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_linux",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_linux_armv7l"
			]
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "winicon.png",
			"files": [
				"main.js",
				"preload.js",
				"secureStorage.js",
				"updateManager.js",
				"package.json",
				"winicon.png",
				"views/**/*",
				"assets/**/*",
				"node_modules/**/*",
				"node_modules/youtube-dl-exec/bin/yt-dlp.exe",
				"!node_modules/youtube-dl-exec/bin/yt-dlp",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_macos",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_linux",
				"!node_modules/youtube-dl-exec/bin/yt-dlp_linux_armv7l"
			]
		},
		"nsis": {
			"createStartMenuShortcut": false,
			"oneClick": false,
			"runAfterFinish": false,
			"createDesktopShortcut": true,
			"allowToChangeInstallationDirectory": true
		},
		"extraResources": [
			{
				"from": "resources/config",
				"to": "config"
			}
		]
	}
}
